<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <property name="autoIncrement" value="true"/>
    <!--
        Added the entity ProgrammingExerciseOptions.
    -->
    <changeSet id="20190904072713-1" author="behnke">
        <createTable tableName="programming_exercise_options">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="automatic_submission_run_after_due_date" type="boolean">
                <constraints nullable="true" />
            </column>
            <!--
                Column for exercise foreign key constraint
            -->
            <column name="programming_exercise_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <!--
        Added foreign key constraint for exercise.
    -->
    <changeSet id="20190904072713-2" author="behnke">
        <addForeignKeyConstraint baseColumnNames="programming_exercise_id"
                                 baseTableName="programming_exercise_options"
                                 constraintName="fk_programming_exercise_options_programming_exercise_id"
                                 referencedColumnNames="id"
                                 referencedTableName="exercise"/>
    </changeSet>
</databaseChangeLog>
